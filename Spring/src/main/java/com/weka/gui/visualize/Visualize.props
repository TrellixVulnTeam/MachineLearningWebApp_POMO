# Properties for visualization
#
# Version: $Revision$

# Maximum precision for numeric values
com.weka.gui.visualize.precision=10

# Colour for the axis in the 2D plot (can use R,G,B format)
com.weka.gui.visualize.Plot2D.axisColour=black

# Colour for the background of the 2D plot (can use R,G,B format)
com.weka.gui.visualize.Plot2D.backgroundColour=white

# The JFrame (needs to implement the interface com.weka.gui.visualize.InstanceInfo)
# for displaying Instance information.
com.weka.gui.visualize.Plot2D.instanceInfoFrame=com.weka.gui.visualize.InstanceInfoFrame

# Display the list of one dimensional attribute visualizations
com.weka.gui.visualize.VisualizePanel.displayAttributeBars=true

# Colour for the background of the attribute bars in the
# AttributePanel (can use R,G,B format)
com.weka.gui.visualize.AttributePanel.barColour=white

# If you regularly visualize certain datasets with the same structure
# you might want to define default x, y and colour dimensions (attributes)
# to visualize on.
# Just uncomment and set up the following
# com.weka.gui.visualize.VisualizePanel.<relation name>.XDimension=<attribute name>
# com.weka.gui.visualize.VisualizePanel.<relation name>.YDimension=<attribute name>
# com.weka.gui.visualize.VisualizePanel.<relation name>.ColourDimension=<attribute name>
# NOTE: spaces in relation names can be handled by using 
# escape characters (java 1.2), eg. my\ first\ relation\ name

# Defaults for threshold curve plots
com.weka.gui.visualize.ThresholdVisualizePanel.ThresholdCurve.XDimension=False\ Positive\ Rate
com.weka.gui.visualize.ThresholdVisualizePanel.ThresholdCurve.YDimension=True\ Positive\ Rate
com.weka.gui.visualize.ThresholdVisualizePanel.ThresholdCurve.ColourDimension=Threshold

#Defaults for cost curve plots
com.weka.gui.visualize.VisualizePanel.CostCurve.XDimension=Probability\ Cost\ Function
com.weka.gui.visualize.VisualizePanel.CostCurve.YDimension=Normalized\ Expected\ Cost
com.weka.gui.visualize.VisualizePanel.CostCurve.ColourDimension=Threshold

# Defaults for margin curve plots
com.weka.gui.visualize.VisualizePanel.MarginCurve.XDimension=Margin
com.weka.gui.visualize.VisualizePanel.MarginCurve.YDimension=Cumulative
com.weka.gui.visualize.VisualizePanel.MarginCurve.ColourDimension=Margin
